@model IEnumerable<Bai2.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="container">
    <div class="d-flex justify-content-between mt-3">
        <h1>SHOP FOR</h1>
        <a href="" style="text-decoration: none;">More categories ></a>
    </div>

    <div class="row">
        <div class="col mx-2" style="background-color: #fff;text-align: center; border: 1px solid rgb(135, 135, 135);">
            <div class="d-flex justify-content-center align-items-center  w-100 overflow-hidden">
                <img src="/img/xiaomi-redmi-note-12-pro-5g.webp" alt="" class="w-100">
            </div>
            <p>Iphone</p>
        </div>

        <div class="col mx-2" style="background-color: #fff;text-align: center; border: 1px solid rgb(135, 135, 135);">
            <div class="d-flex justify-content-center align-items-center  w-100 overflow-hidden">
                <img src="/img/samsung-galaxy-z-flip-5-256gb_1_5.webp" alt="" class="w-100">
            </div>
            <p>Realme</p>
        </div>

        <div class="col mx-2" style="background-color: #fff;text-align: center; border: 1px solid rgb(135, 135, 135);">
            <div class="d-flex justify-content-center align-items-center  w-100 overflow-hidden">
                <img src="/img/oppo-reno-11-f-xanh-2.webp" alt="" class="w-100">
            </div>
            <p>Samsung</p>
        </div>

        

        <div class="col mx-2" style="background-color: #fff;text-align: center; border: 1px solid rgb(135, 135, 135);">
            <div class="d-flex justify-content-center align-items-center  w-100 overflow-hidden">
                <img src="/img/tecno-pova-5_2_.webp" alt="" class="w-100">
            </div>
            <p>Nokia</p>
        </div>

        <div class="col mx-2" style="background-color: #fff;text-align: center; border: 1px solid rgb(135, 135, 135);">
            <div class="d-flex justify-content-center align-items-center  w-100 overflow-hidden">
                <img src="/img/nubia-neo-5g_2_1.webp" alt="" class="w-100">
            </div>
            <p>Xiaomi</p>
        </div>
    </div>



    <div class="d-flex justify-content-between mt-3">
        <h1>FEARTURED COLLECTION</h1>
        <a href="" style="text-decoration: none;">More leica s ></a>
    </div>

    <div class="row">
        @{var count = 0 ;}
        @foreach (var item in StaticService.listProducts)
        {
            <a asp-action="Details" asp-route-id ="@count" asp-controller ="Products" class="col-3 " style="text-decoration : none ; color : black; text-align : center;">
                <div class="d-flex m-2 justify-content-center align-items-center w-100 overflow-hidden">
                    <img src="~/@StaticService.listProducts[count].Img" class ="w-100" />
                </div>
                <p>@StaticService.listProducts[count].Name</p>
                <h4><b>@StaticService.listProducts[count++].Price.ToString("N0")</b></h4>
            </a>
        }
    </div>
</body>

</html>